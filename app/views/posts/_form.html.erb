
<%= form_for @post, html: {multipart: true} do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :caption %>
  <%= f.text_field :caption %>
  <br>

  <%= label_tag :photo_image %>
  <%= cl_image_upload_tag :photo_image %>
  <br>

  <%= label_tag :photo_title %>
  <%= text_field_tag :photo_title %>
  <br>

  <%= f.submit %>

<% end %>
