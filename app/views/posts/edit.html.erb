<div class="page-header">
  <h2>Edit post: <%= @post.title %></h2>
</div>

<div class="page-form">
<%= form_for @post, html: {multipart: true} do |f| %>

  <%= f.label :title, 'Post title:' %><br>
  <%= f.text_field :title, class: 'form-text-field' %>
  <br>
  <br>

  <%= f.label :caption, 'Post caption:' %><br>
  <%= f.text_area :caption, class: 'form-text-area' %>
  <br>
  <br>

  <%= f.submit "Finish editing", class:"submit-button" %>

<% end %>
</div>
<br>
