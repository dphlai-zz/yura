<h2>Login</h2>

<% if flash[:error] %>
<strong><%= flash[:error] %></strong>
<br>
<br>
<% end %>

<%= form_tag login_path do %>

  <%= label_tag :email %><br>
  <%= email_field_tag :email %>
  <br>

  <%= label_tag :password %><br>
  <%= password_field_tag :password %>
  <br>
  <br>

  <%= submit_tag 'Login' %>

<% end %>
